{
    "$schema": "http://json-schema.org/schema#",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "default": 0
        },
        "type": {
            "type": "string",
            "enum": ["kdeconnect.share.request"]
        },
        "body": {
            "type": "object",
            "properties": {
                "filename": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            }
        }
    }
}
