{
    "$schema": "http://json-schema.org/schema#",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "default": 0
        },
        "type": {
            "type": "string",
            "enum": ["kdeconnect.notification.action"]
        },
        "body": {
            "type": "object",
            "required": [
                "currentCharge",
                "isCharging"
            ],
            "properties": {
                "key": {
                    "type": "string",
                    "default": "notification-id"
                },
                "action": {
                    "type": "string",
                    "default": "Button One"
                }
            }
        }
    }
}
