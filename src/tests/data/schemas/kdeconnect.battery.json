{
    "$schema": "http://json-schema.org/schema#",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "default": 0
        },
        "type": {
            "type": "string",
            "enum": ["kdeconnect.battery"]
        },
        "body": {
            "type": "object",
            "required": [
                "currentCharge",
                "isCharging"
            ],
            "properties": {
                "currentCharge": {
                    "type": "integer",
                    "minimum": -1,
                    "maximum": 100
                },
                "isCharging": {
                    "type": "boolean",
                    "default": false
                },
                "thresholdEvent": {
                    "type": "integer",
                    "enum": [0, 1]
                }
            }
        }
    }
}
