{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://andyholmes.ca/kdeconnect-schema/packet",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "default": 0
        },
        "type": {
            "type": "string",
            "pattern": "kdeconnect.photo.request"
        },
        "body": {
            "type": "object",
            "required": [
                "deviceId",
                "deviceName",
                "incomingCapabilities",
                "outgoingCapabilities",
                "protocolVersion"
            ],
            "properties": {
                "deviceId": {
                    "type": "string"
                },
                "deviceName": {
                    "type": "string"
                },
                "incomingCapabilities": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "outgoingCapabilities": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "protocolVersion": {
                    "type": "integer",
                    "default": 7
                }
            }
        }
    }
}
