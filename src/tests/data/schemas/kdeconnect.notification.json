{
    "$schema": "http://json-schema.org/schema#",
    "required": [
        "id",
        "type",
        "body"
    ],
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "default": 0
        },
        "type": {
            "type": "string",
            "enum": ["kdeconnect.notification"]
        },
        "body": {
            "type": "object",
            "required": [
                "currentCharge",
                "isCharging"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "default": "notification-id"
                },
                "isCancel": {
                    "type": "boolean",
                    "default": true
                },
                "isClearable": {
                    "type": "boolean",
                    "default": true
                },
                "onlyOnce": {
                    "type": "boolean",
                    "default": true
                },
                "time": {
                    "type": "string",
                    "default": "1234567890"
                },
                "appName": {
                    "type": "string",
                    "default": "Test Application"
                },
                "ticker": {
                    "type": "string",
                    "default": "Test Title: Test Body"
                },
                "title": {
                    "type": "string",
                    "default": "Test Title"
                },
                "text": {
                    "type": "string",
                    "default": "Test Body"
                },
                "payloadHash": {
                    "type": "string",
                    "minLength": 32,
                    "maxLength": 32,
                    "default": "785f2906761c43d4031c853ff63c0c0f"
                },
                "actions": {
                    "type": "array",
                    "default": [
                        "Button One",
                        "Button Two",
                        "Button Three"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "requestReplyId": {
                    "type": "string",
                    "default": "replyId"
                }
            }
        }
    }
}
